# Environment Mode
NODE_ENV=production

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=release_checklist_tool

# Backend Configuration
PORT=5000
HOST=0.0.0.0
DATABASE_URL=postgresql://postgres:password@db:5432/release_checklist_tool

# CORS - Allowed Origins (comma-separated)
# For local development: http://localhost:5173,http://localhost:3000
# For production: http://your-domain.com,https://your-domain.com
# For Azure VM: http://YOUR_AZURE_IP,http://YOUR_AZURE_IP:80
# Use * to allow all origins (not recommended for production)
ALLOWED_ORIGINS=*

# Port Mappings (host:container)
BACKEND_PORT=5000
FRONTEND_PORT=80
DB_PORT=5432

# Frontend Configuration (build-time variable)
VITE_API_URL=/api
